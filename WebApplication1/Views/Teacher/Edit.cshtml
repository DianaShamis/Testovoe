@model WebApplication1.Models.TeacherTable.Teacher

@{
    string controllerName = "Teacher";
}
<style>
    input {
        position: relative
    }
</style>
<div>
    @using (Html.BeginForm("Edit", controllerName, FormMethod.Post, new { @class = "form-vertical form-bordered form-striped form-validate" }))
    {
        <h1>Редактировать куратора</h1>
        <label>Введите ФИО :</label>
        <span asp-validation-for="Name" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</div>

        <label>Введите специальность :</label>
        <span asp-validation-for="Speciality" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Speciality, new { @class = "form-control" })</div>

        <input type="submit" value="Добавить в список кураторов" />
    }

    <div>
        @Html.ActionLink("Сохранить изменения", "Index")
    </div>
</div>