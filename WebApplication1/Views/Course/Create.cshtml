@model WebApplication1.Models.CourseTable.Course

@{ 
    string controllerName = "Course";
}
<style>
    input {
        position:relative
    }
</style>
<div>
    @using (Html.BeginForm("Create", controllerName, FormMethod.Post, new { @class = "form-vertical form-bordered form-striped form-validate" }))
    {
        <h1>Добавить курс</h1>
        <label>Введите название курса :</label>
        <div>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</div>

        <input type="submit" value="Добавить в курсы"/>
    }

    <div>
        @Html.ActionLink("К списку курсов", "Index")
    </div>
</div>