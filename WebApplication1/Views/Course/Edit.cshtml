@model WebApplication1.Models.CourseTable.Course

@{
    string controllerName = "Course";
}
<style>
    input {
        position: relative
    }
</style>
<div>
    @using (Html.BeginForm("Edit", controllerName, FormMethod.Post, new { @class = "form-vertical form-bordered form-striped form-validate" }))
    {
        <h1>Редактировать курс</h1>

        <label>Введите название курса :</label>
        <span asp-validation-for="Name" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</div>

        <input type="submit" value="Добавить в курсы" />
    }

    <div>
        @Html.ActionLink("Сохранить изменения", "Index")
    </div>
</div>