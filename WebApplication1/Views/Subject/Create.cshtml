@model WebApplication1.Models.SubjectTable.SubjectViewModel

@{
    string controllerName = "Subject";
}
<style>
    input {
        position: relative
    }
</style>
<div>
    @using (Html.BeginForm("Create", controllerName, FormMethod.Post, new { @class = "form-vertical form-bordered form-striped form-validate" }))
    {
        <h1>Создание предмета</h1>

        <label>Введите название :</label>

        <span asp-validation-for="Name" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</div>

        <label>Выберите куратора :</label>
        <span asp-validation-for="TeacherId" style="color:red;"></span>
        <div>@Html.DropDownListFor(x => x.TeacherId, Model.TeacherList, new { @class = "form-control" })</div>

        <input type="submit" value="Добавить в список предметов" />
    }

    <div>
        @Html.ActionLink("К списку предметов", "Index")
    </div>
</div>