@model WebApplication1.Models.GroupTable.Group
@{
    string controllerName = "Group";
}
<style>
    input {
        position: relative
    }
</style>
<div>
    @using (Html.BeginForm("Edit", controllerName, FormMethod.Post, new { @class = "form-vertical form-bordered form-striped form-validate" }))
    {
        <h1>Редактировать группы</h1>

        <label>Введите название группы :</label>
        <span asp-validation-for="Name" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</div>

        <label>Введите год :</label>
        <span asp-validation-for="Year" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Year, new { @type = "date" })</div>

        <label>Введите специальность :</label>
        <span asp-validation-for="Speciality" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Speciality, new { @class = "form-control" })</div>

        <input type="submit" value="Добавить в группу" />
    }

    <div>
        @Html.ActionLink("Сохранить изменения", "Index")
    </div>
</div>