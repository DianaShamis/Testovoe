@model WebApplication1.Models.StudentTable.StudentViewModel
@{
    string controllerName = "Student";
}
<style>
    input {
        position: relative
    }
    div {
        padding-bottom: 10px;
    }
</style>
<div>
    @using (Html.BeginForm("Edit", controllerName, FormMethod.Post, new { @class = "form-vertical form-bordered form-striped form-validate", enctype = "multipart/form-data" }))
    {
        <h1>Редактировать студента</h1>
        <label>Введите ФИО :</label>
        <span asp-validation-for="Name" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Name, new { @class = "form-control" })</div>

        <label>Введите номер телефона :</label>
        <span asp-validation-for="Phone" style="color:red;"></span>
        <div>@Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })</div>

        @if (Model.StudentPhoto != null)
        {
            <div>
                <img style="width:200px; height:150px;" class="photo" src="@Url.Content(Model.StudentPhoto.Path)">
            </div>
        }
        <label>Добавьте фото :</label>
        <div>
            <p>
                <input type="file" name="uploadedFile">
            </p>
        </div>

        <label>Выберете группу:</label>
        <span asp-validation-for="GroupId" style="color:red;"></span>
        <div>@Html.DropDownListFor(x => x.GroupId, Model.GroupList, new { @class = "form-control" })</div>

        <input type="submit" value="Добавить в список студентов" />
    }

    <div>
        @Html.ActionLink("Сохранить изменения", "Index")
    </div>
</div>